<?xml version="1.0" encoding="utf-8" ?>
<FlyoutPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IndDictionary.Flyout_Page"
             xmlns:pages="clr-namespace:IndDictionary">
    <FlyoutPage.Flyout>
        <ContentPage Title="Dictionary">
            <ContentPage.Resources>
                <ResourceDictionary>
                    <x:Array x:Key="SectionsArray" Type="{x:Type x:String}">
                        <x:String>Word</x:String>
                        <x:String>Translation</x:String>
                    </x:Array>
                </ResourceDictionary>
            </ContentPage.Resources>
            <ListView x:Name="Sections" 
                      ItemsSource="{StaticResource Key=SectionsArray}"
                      ItemSelected="onSelected"/>
        </ContentPage>
    </FlyoutPage.Flyout>
</FlyoutPage>